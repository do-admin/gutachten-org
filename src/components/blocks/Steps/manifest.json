{
  "name": "Steps",
  "version": "1.0.0",
  "description": "Steps section component displaying a process or workflow with icons, descriptions, and optional CTA button",
  "props": {
    "title": {
      "type": "string",
      "required": true,
      "description": "Main heading for the steps section"
    },
    "subtitles": {
      "type": "array",
      "required": false,
      "default": [],
      "description": "Array of subtitle lines to display below the title",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "required": true
          },
          "className": {
            "type": "string",
            "required": false
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "required": true,
      "description": "Array of step items",
      "items": {
        "type": "object",
        "properties": {
          "stepNumber": {
            "type": "number",
            "required": true
          },
          "icon": {
            "type": "string",
            "required": true,
            "description": "Icon name as string"
          },
          "title": {
            "type": "string",
            "required": true
          },
          "description": {
            "type": "string",
            "required": true
          },
          "badgeText": {
            "type": "string",
            "required": false
          },
          "badgeClassName": {
            "type": "string",
            "required": false
          },
          "highlightWords": {
            "type": "array",
            "required": false,
            "items": {
              "type": "string"
            }
          },
          "highlightClassName": {
            "type": "string",
            "required": false
          },
          "className": {
            "type": "string",
            "required": false
          }
        }
      }
    },
    "ctaButton": {
      "type": "object",
      "required": false,
      "description": "Call-to-action button configuration",
      "properties": {
        "text": {
          "type": "string",
          "required": true
        },
        "href": {
          "type": "string",
          "required": true
        },
        "icon": {
          "type": "string",
          "required": false
        },
        "variant": {
          "type": "enum",
          "values": [
            "outline",
            "secondary",
            "default",
            "destructive",
            "ghost",
            "link"
          ],
          "required": false
        },
        "size": {
          "type": "enum",
          "values": ["default", "sm", "lg", "icon"],
          "required": false
        }
      }
    },
    "backgroundColor": {
      "type": "string",
      "required": false,
      "default": "bg-white"
    },
    "className": {
      "type": "string",
      "required": false,
      "default": ""
    },
    "columns": {
      "type": "enum",
      "values": [1, 2, 3, 4],
      "required": false,
      "default": 3
    },
    "cardClassName": {
      "type": "string",
      "required": false,
      "default": ""
    },
    "iconSize": {
      "type": "enum",
      "values": ["sm", "md", "lg"],
      "required": false,
      "default": "md"
    }
  },
  "requires": [
    "ui/card",
    "ui/button",
    "blocks/Heading",
    "next/link",
    "lib/icon-utils"
  ],
  "npm": {
    "dependencies": ["next@^14.0.0", "clsx@^2.0.0", "tailwind-merge@^2.0.0"],
    "devDependencies": []
  },
  "category": "components",
  "examples": [
    {
      "name": "Three Step Process",
      "description": "Display a three-step process with icons and descriptions",
      "props": {
        "title": "So funktioniert's",
        "steps": [
          {
            "stepNumber": 1,
            "icon": "Home",
            "title": "Immobilie bewerten",
            "description": "Kostenlose Online-Bewertung in 2 Minuten"
          },
          {
            "stepNumber": 2,
            "icon": "FileText",
            "title": "Beratungstermin vereinbaren",
            "description": "Persönliche Besprechung vor Ort"
          },
          {
            "stepNumber": 3,
            "icon": "CheckCircle",
            "title": "Vertrag abschließen",
            "description": "Schnell und unkompliziert"
          }
        ]
      }
    }
  ]
}
